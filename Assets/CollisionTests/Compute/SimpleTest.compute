#pragma kernel Test

struct Particle {
  float3 position;
  float3 velocity;
};

RWStructuredBuffer<Particle> _Particles;

[numthreads(64, 1, 1)]
void Test(uint3 id : SV_DispatchThreadID) {
  uint index = id.x;

  Particle particle = _Particles[index];
  particle.position += particle.velocity;
  _Particles[index] = particle;
}